{
  "name": "weeklyreport-frontend",
  "version": "2.0.0",
  "description": "Modern Desktop Web Application for Weekly Report Management",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development --host 0.0.0.0 --port 3005",
    "dev:local": "vite --mode development --host 0.0.0.0 --port 3005",
    "dev:test": "vite --mode test --host 0.0.0.0 --port 3005",
    "dev:prod": "vite --mode production --host 0.0.0.0 --port 3005",
    "build": "vite build --mode production",
    "build:local": "vite build --mode development",
    "build:test": "vite build --mode test",
    "build:prod": "vite build --mode production",
    "build:prod:strict": "vue-tsc && vite build --mode production",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit --project vue-tsc.config.json",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:build": "rm -rf dist",
    "analyze": "vite build --mode production && npx vite-bundle-analyzer dist/stats.html"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@vueuse/core": "^10.5.0",
    "axios": "^1.6.0",
    "marked": "^15.0.12",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@types/node": "^20.8.10",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "~5.2.0",
    "vite": "^4.4.11",
    "vue-tsc": "^1.8.19"
  }
}
